@model IEnumerable<GeolabOldCcar.Models.Icon>

@{
    ViewBag.Title = "Icon";
}

<h2>Icon</h2>

<p>
    @Html.ActionLink("Create New", "AddIcon")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IconDesc)
        </th>
        <th>
            foto
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IconDesc)
            </td>
            <td>
                <img src="~/Content/Image/@Html.DisplayFor(modelItem => item.IconName)@Html.DisplayFor(modelItem => item.iconExt)" width="100px" height="100px">


            </td>
            <td>
                @Html.ActionLink("Edit", "IconEdit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "IconDelete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
