
@{
    ViewBag.Title = "Slide";
}

<form class="form-horizontal" role="form" method="POST" action="/Admin/AddSlide" enctype="multipart/form-data">

    <div class="form-horizontal">
        <h4>Post</h4>
        <hr />

        <div class="form-group">
            <label class="control-label col-md-2" for="body">ფოტო</label>
            <div class="col-md-10">

                <input type="File" name="file1" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="body">თარიღი</label>
            <div class="col-md-10">

                <input type="date" name="Date" />

            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="body">სათაური</label>
            <div class="col-md-10">

                <input type="text" name="Title" />

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">

                <input type="submit" value="Create" class="btn btn-default" />


            </div>
            <h5 style="color:red">@ViewBag.error</h5>
        </div>
    </div>
</form>
