@model GeolabOldCcar.Models.Icon

    @{
        ViewBag.Title = "IconEdit";
    }

    <h2>SliderEdit</h2>

    <form class="form-horizontal" role="form" method="POST" action="/Admin/IconEdit" enctype="multipart/form-data">

        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Slider</h4>
            <hr />
            <div class="form-group">
                @Html.LabelFor(model => model.Id, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="text" value="@Model.Id" name="id" readonly />

                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-md-2" for="body">ფოტო</label>
                <div class="col-md-10">
                    <div class="col-md-10">
                        <input type="File" name="File1" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="body">აღწერა</label>
                <div class="col-md-10">
                    <input type="text" name="Name" value="@Model.IconDesc" />

                    @Html.ValidationMessageFor(model => model.IconDesc, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>

    </form>
    <div>
        @Html.ActionLink("Back to List", "Slider")
    </div>
